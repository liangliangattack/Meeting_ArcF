<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".UI.ActivityGG">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/mt_blue"
            android:gravity="center">
            <ImageView
                android:id="@+id/back_three"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back"
                android:gravity="center_vertical"/>
            <Button
                android:alpha="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新闻"
                android:textColor="#fff"/>
            <Button
                android:alpha="0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6" />
            <ImageView
                android:id="@+id/setting_three"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/setting"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_details2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/title_detials2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="title"
                android:layout_marginBottom="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ccc"/>
            <ImageView
                android:id="@+id/iv_details2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/news1"/>
            <TextView
                android:id="@+id/content_detials2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/time_detials2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_below="@+id/ll_details2"
            android:layout_alignParentRight="true"
            android:layout_margin="30dp" />

    </RelativeLayout>
</ScrollView>