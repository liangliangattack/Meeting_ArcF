<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp"
        android:background="#fff">
        <!--<ImageView-->
            <!--android:id="@+id/iv_return_register"-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:src="@mipmap/fanhuijt"/>-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="英语"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入英文单词"
            android:background="@drawable/button_shape"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/style_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/style"
                android:layout_margin="10dp">

            </Spinner>
            <Button
                android:id="@+id/trans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="70dp"
                android:text="翻译"
                android:background="@drawable/button_shape_2"/>
            <ImageView
                android:id="@+id/play"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/play"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_margin="10dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/trans_all_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发音："
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/sound_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:text="例子：ʊd"
                android:textSize="17sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本释义："
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/trans_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="例子：好的"
                android:textSize="17sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网络释义："
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/trans_web_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="例子：虔诚的"
                android:textSize="17sp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>