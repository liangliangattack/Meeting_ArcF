<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <android.support.v7.widget.CardView
        android:id="@+id/ml_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ml_iv_point"
                android:layout_width="0dp"
                android:layout_height="17dp"
                android:layout_weight="0.2"
                android:layout_marginLeft="7dp"
                android:src="@drawable/r"
                android:layout_marginTop="6dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ml_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="title"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/leader" />

                        <TextView
                            android:id="@+id/ml_tv_leader"
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textSize="11sp"
                            android:text="大分子"
                            android:textColor="#ccc"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/calender" />

                        <TextView
                            android:id="@+id/ml_tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:textColor="#ccc"
                            android:text="2018.01.25 16:50"
                            android:textSize="11sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:layout_weight="0.5"
                android:layout_marginTop="15dp"
                android:src="@drawable/ci" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>